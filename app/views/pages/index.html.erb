<div class="banner">
    <div class="search-input-group">
      <div class="search-input">
        <form class="">
          <input class="nav-search banner-search" type="search" placeholder="Search" aria-label="Search">
        </form>

      </div>
      <div class="dropdown">
        <button class="banner-search-categories dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Categories
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">Hacks</a>
          <a class="dropdown-item" href="#">Don't</a>
          <a class="dropdown-item" href="#">Projects</a>
        </div>
      </div>
      <button type="button" class="btn">
        <i class="fas fa-search"></i>
      </button>
    </div>

    <div class="filters">
      <ul class="w-100">
        <li class="filter-btn">Sort by:</li>
        <li class="filter-btn"> <%= link_to "Hacks", search_path %> </li>
        <li class="filter-btn"> <%= link_to "Don't", search_path %> </li>
        <li class="filter-btn"> <%= link_to "Explore", search_path %> </li>
        <li class="filter-btn"> <%= link_to "Info" %> </li>
      </ul>
    </div>
</div>
  <div class="container">
    <% @posts.each do |post| %>
      <div class="w-100 post-view">
        <div class="col-8 post-resume">

          <div class="post-content">
            <div class="user-data">
              <%= cl_image_tag post.user.prof_pic.key, class:"avatar-bordered" %>
              <p>Posted by <%= post.user.nickname %> </p>
              <ul class="rating">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
              </ul>
            </div>
            <div class="container post-text">
            <h3>"<%= post.title %>"</h3>
            <p>
              <%= truncate(post.rich_body.to_plain_text.squish, length: 250)  %>
            </p>
            </div>
            <div class="btn-panel-container">
                <%= link_to "View", post_path(post), class:"btn-panel"%>
            </div>
          </div>
        </div>
          <div class="post-img col-4 post-img" style="background-image: url(<%= cl_image_path post.photos.last.key if post.photos.attached? %>);"></div>
      </div>
   <% end %>
  </div>




