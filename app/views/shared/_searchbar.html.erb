<div class="search-cont">
  <div class="search-input-group">
      <div class="search-input col-7">
        <%= form_tag search_path, method: :get do %>
        <%= text_field_tag :query, params[:query], placeholder: "Find a post" %>
      </div>
      <div class="cat-sub col-5">
        <div class= "drop-list">
          <%= select_tag "category", options_for_select(%w[All Hack Don't Project], \
          selected: params[:category]), id: "search-field", :include_blank => "Category" %>
        </div>
         <div class= "drop-list">
          <%= select_tag(:ratings, options_for_select(["all", "Rating", "Views", "co2", "Waste", "Resources", "Ease", "Side-effects"], \
          selected: params[:ratings]), id: "search-field", :include_blank => "Sort by")%>
        </div>
        <div class= "submit-btn">
          <%= submit_tag "Go", class: "search-bar-submit btn" %>
        </div>
        <% end %>
      </div>
  </div>
</div>
